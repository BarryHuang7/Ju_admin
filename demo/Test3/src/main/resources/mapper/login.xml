<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.test3.dao.LoginDao">
    <resultMap type="com.example.commons.entity.LoginInfoVO" id="loginInfoMap">
        <result property="id" column="id" />
        <result property="name" column="name" />
        <result property="isAdmin" column="is_admin" />
    </resultMap>

    <select id="verification" resultMap="loginInfoMap">
        select
            id, name, is_admin
        from user
        where name = #{dto.name} and password = #{dto.password}
    </select>

    <select id="findUserById" resultMap="loginInfoMap">
        select
        id, name, is_admin
        from user
        where id = #{id}
    </select>

    <insert id="insertVisitorInfo" parameterType="com.example.commons.entity.LoginInfo">
        insert into `login_info`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="dto.userId != null">
                `user_id`,
            </if>
            <if test="dto.userName != null">
                `user_name`,
            </if>
            <if test="dto.date != null">
                `date`,
            </if>
            <if test="dto.ip != null">
                `ip`,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="dto.userId != null">
                #{dto.userId},
            </if>
            <if test="dto.userName != null">
                #{dto.userName},
            </if>
            <if test="dto.date != null">
                #{dto.date},
            </if>
            <if test="dto.ip != null">
                #{dto.ip},
            </if>
        </trim>
    </insert>
</mapper>